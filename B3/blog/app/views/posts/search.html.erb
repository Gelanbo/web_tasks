<p><strong>搜索结果</strong></p>

<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.updated_at %></td>
      <td><%= link_to '查看文章',"/post_show/#{post.id}" %></td>
    </tr>
  <% end %>
</table>
