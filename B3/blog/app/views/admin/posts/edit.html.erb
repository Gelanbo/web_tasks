<h1><strong>编辑文章</strong></h1>
<%= form_for :post,url:"/admin/post_edits/#{@post_id}" do |f|%>
  <p>
    <%= f.label '标题' %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label '内容' %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit '提交'%>
  </p>
<% end %>
<br>
<%= link_to "放弃编辑","/admin/post_index" %>
