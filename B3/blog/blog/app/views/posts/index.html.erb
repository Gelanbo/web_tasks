<%= link_to "创建文章","/create" %><br>

<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.updated_at %></td>
      <td><%= link_to '查看文章',"/post_show/#{@admin_id}/#{post.id}" %></td>
      <td><%= link_to '编辑文章',"/post_edit/#{post.id}" %></td>
      <td><%= link_to '删除文章',"/post_delete/#{post.id}" %></td>
    </tr>
  <% end %>
</table>
